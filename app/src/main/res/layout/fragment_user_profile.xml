<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.OtherProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="171dp"
                android:layout_gravity="center"
                android:layout_marginBottom="27dp"
                android:src="@drawable/defaultprofile"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="Kullanıcı Adı"
                android:id="@+id/userProfileNameText"
                android:textSize="22dp"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Genel Bilgiler"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/userProfileOkulText"
                android:layout_marginTop="15dp"
                android:text="Okul"
                android:textSize="18dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/userProfileBolumText"
                android:text="Bölüm"
                android:textSize="18dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/userProfileSinifText"
                android:text="Sınıf"
                android:textSize="18dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="89dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/arkadas_say"></ImageView>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></ImageView>

                <ImageView
                    android:id="@+id/userProfileAddImage"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"></ImageView>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="377dp"
                android:layout_height="26dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userProfileArkText"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="20dp"
                    android:text="0 Arkadaş"
                    android:textStyle="bold"></TextView>


            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
